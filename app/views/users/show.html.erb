<p>
  <b>User:</b>
  <%= @user.email %>
</p>
<div>
  <%= image_tag @user.avatar.url(:medium) %>
</div>
<p>
  <b>id:</b>
  <%= @user.id %>
</p>

<p>
  <b>is merchant?</b>
  <%= @user.is_merchant %>
</p>

<p>
  <b>description:</b>
  <%= @user.description %>
</p>

<p>
  <b>address</b>
  <%= @user.address %>
</p>

<p>
  <b>lat/lng: </b>
  <%= @user.latitude %>, <%= @user.longitude %>
</p>

<ul>
  <li><%= link_to "View #{@user.name}'s bills", user_bills_path %></li>
  <li><%= link_to "View #{@user.name}'s invoices", user_invoices_path %></li>
  <li><%= link_to 'Back', users_path %></li>
</ul>



